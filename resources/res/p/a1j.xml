<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="20dp"/>
            <solid android:color="#ededed"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="20dp"/>
                <gradient android:startColor="@color/abj" android:endColor="@color/abj" android:angle="180"/>
            </shape>
        </scale>
        <scale android:drawable="@drawable/c48" android:scaleWidth="100%"/>
    </item>
</layer-list>
